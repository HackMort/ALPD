---
type Props = {
  id: string;
  classes?: string;
  useDefaultButton?: boolean;
};

const { id, classes = "", useDefaultButton = true } = Astro.props;
---

<div class={`pinch-to-zoom f-panzoom ${classes}`} id={id}>
  <button class="pinch-to-zoom__close-modal" style="display: none">Ã—</button>
  <div class="pinch-to-zoom__container f-panzoom__viewport">
    <div class="f-panzoom__content">
      {
        useDefaultButton && (
          <button
            data-panzoom-action="zoomToFull"
            data-content-id={id}
            class="button button--pinch-to-zoom"
          />
        )
      }
      <slot />
    </div>
  </div>
</div>
<script src="/src/js/pinch-to-zoom.ts" type="module"></script>
