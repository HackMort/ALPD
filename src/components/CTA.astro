---
type Props = {
  linkURL: string;
  buttonLabel: string;
  content: string;
  linkTarget?: string;
  variation?: string;
  className?: string;
  bypassModal?: boolean;
};

const {
  linkURL,
  linkTarget,
  variation, 
  content,
  buttonLabel,
  bypassModal = false,
  className,
} = Astro.props;

const bypass = bypassModal ? "document-link" : ' ';
const linkClasses = `button ${bypass}`;
const targetAnchor = linkTarget ? linkTarget : "_self";
const variant = variation ? variation : "variant-1";
const customClass = className ? className : ' ';
const mainClass = `cta ${customClass}`

---

<div class={mainClass}>
    <div class={variant}>
      <div class="cta__text" set:html={content}></div>
        <a href={linkURL} target={targetAnchor} class={linkClasses}>{buttonLabel}</a>
        <div class="red-string mod-1"></div >
        <div class="red-string mod-2"></div >
        <div class="red-string mod-3"></div >
    </div>

</div>